extends layout

block content
  .container
    .row
      .col-md-12
        h1.error-status= status
        h2.error-message= message
  if typeof stack === 'string'
    .container-fluid
      .row.spacer
      .row
        .col-md-offset-1.col-md-10
          pre
            code.language-xxxx #{stack}

block scripts
  script(src='/js/prism.js')